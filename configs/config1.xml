<?xml version="1.0" encoding="UTF-8"?>

<seqgra xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<general id="testid">
		<label></label>
		<description></description>
		<sequencespace>DNA</sequencespace>
	</general>
	
	<background>
		<minlength>150</minlength>
		<maxlength>150</maxlength>
		<alphabetdistributions>
			<alphabetdistribution>
			<letter probability="0.25">A</letter>
			<letter probability="0.25">C</letter>
			<letter probability="0.25">G</letter>
			<letter probability="0.25">T</letter>
			</alphabetdistribution>
		</alphabetdistributions>
	</background>
	
	<datageneration>
		<seed>0</seed>
		<sets>
			<set name="training">
				<conditionrefs>
					<conditionref cid="c1" samples="10000" />
					<conditionref cid="c2" samples="10000" />
				</conditionrefs>
			</set>
			<set name="validation">
				<conditionrefs>
					<conditionref cid="c1" samples="1000" />
					<conditionref cid="c2" samples="1000" />
				</conditionrefs>
			</set>
			<set name="test">
				<conditionrefs>
					<conditionref cid="c1" samples="5000" />
					<conditionref cid="c2" samples="5000" />
				</conditionrefs>
			</set>
		</sets>
	</datageneration>

	<conditions>
		<condition id="c1">
			<label>cell type 1</label>
			<description></description>
			<grammar>
				<rule>
					<position>70</position>
					<sequenceelementrefs>
						<sequenceelementref sid="se1" probability="1.0" />
					</sequenceelementrefs>
				</rule>
			</grammar>
		</condition>
		<condition id="c2">
			<label>cell type 2</label>
			<description></description>
			<grammar>
				<rule>
					<position>70</position>
					<sequenceelementrefs>
						<sequenceelementref sid="se2" probability="1.0" />
					</sequenceelementrefs>
				</rule>
			</grammar>
		</condition>
	</conditions>
	
	<sequenceelements>
		<sequenceelement id="se1">
			<kmerbased>
				<kmer probability="0.5">AGCTGCAGTC</kmer>
				<kmer probability="0.5">AGCTGCTC</kmer>
			</kmerbased>
		</sequenceelement>
		<sequenceelement id="se2">
			<matrixbased>
				<position>
					<letter probability="0.2">A</letter>
					<letter probability="0.3">C</letter>
					<letter probability="0.2">G</letter>
					<letter probability="0.3">T</letter>
				</position>
				<position>
					<letter probability="0.8">A</letter>
					<letter probability="0.1">C</letter>
					<letter probability="0.1">G</letter>
					<letter probability="0">T</letter>
				</position>
				<position>
					<letter probability="0.8">A</letter>
					<letter probability="0.1">C</letter>
					<letter probability="0.1">G</letter>
					<letter probability="0">T</letter>
				</position>
				<position>
					<letter probability="0.1">A</letter>
					<letter probability="0">C</letter>
					<letter probability="0">G</letter>
					<letter probability="0.9">T</letter>
				</position>
			</matrixbased>
		</sequenceelement>
	</sequenceelements>
</seqgra>
